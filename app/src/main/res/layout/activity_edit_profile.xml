<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.activity.EditProfileActivity"
    android:background="@color/fontColor"
    android:id="@+id/container">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1ECFF" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="-25dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/close"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="30dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/secondaryColor"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_round_close_24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    tools:targetApi="lollipop" />
            </androidx.cardview.widget.CardView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/header_tittle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/dosis_bold"
                        android:text="Edit Profile"
                        android:textColor="@color/fontColor"
                        android:textSize="36sp"
                        android:layout_marginHorizontal="30dp"/>

                    <RelativeLayout
                        android:id="@+id/pick_image"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginHorizontal="30dp"
                        android:layout_gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_centerInParent="true"
                            android:layout_margin="1dp"
                            app:cardCornerRadius="75dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/profile_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:visibility="visible"
                                    android:src="@drawable/profileimage"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?android:attr/selectableItemBackground"
                                tools:targetApi="lollipop" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cardCornerRadius="16dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/mainColor"
                                android:padding="10dp">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_round_camera_alt_24_white"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?android:attr/selectableItemBackground"
                                tools:targetApi="lollipop" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginHorizontal="30dp">

                        <EditText
                            android:id="@+id/tittle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/layouting"
                            android:fontFamily="@font/dosis_regular"
                            android:hint="Username"
                            android:inputType="textCapWords"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:background="@drawable/background_label"
                            android:fontFamily="@font/dosis_semibold"
                            android:text="Username"
                            android:textColor="#1b1b1b"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginHorizontal="30dp">

                        <TextView
                            android:id="@+id/old_pass"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/layouting"
                            android:fontFamily="@font/dosis_regular"
                            android:gravity="center_vertical"
                            android:hint="Password Lama"
                            android:inputType="text"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:background="@drawable/background_label"
                            android:fontFamily="@font/dosis_semibold"
                            android:text="Password Lama"
                            android:textColor="#1b1b1b"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginHorizontal="30dp">

                        <TextView
                            android:id="@+id/new_pass"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/layouting"
                            android:fontFamily="@font/dosis_regular"
                            android:gravity="center_vertical"
                            android:hint="Password Baru"
                            android:inputType="text"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:background="@drawable/background_label"
                            android:fontFamily="@font/dosis_semibold"
                            android:text="Password Baru"
                            android:textColor="#1b1b1b"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/monetize"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginHorizontal="30dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingHorizontal="12dp"
                            android:background="@drawable/layouting">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/dosis_semibold"
                                android:text="Monetisasi Akun"
                                android:textColor="#989898"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/is_monetize"
                                android:layout_width="30dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_toggle_off_black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:attr/selectableItemBackground"
                            tools:targetApi="lollipop" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_action"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="30dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        android:layout_marginHorizontal="30dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/mainColor"
                            android:orientation="horizontal">

                            <ProgressBar
                                android:id="@+id/btn_loading"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="20dp"
                                android:layout_toStartOf="@+id/btn_label"
                                android:indeterminateDrawable="@drawable/progress"
                                android:indeterminateDuration="1000"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/btn_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/dosis_bold"
                                android:text="Simpan"
                                android:textColor="#ffffff"
                                android:textSize="18sp" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:attr/selectableItemBackground"
                            tools:targetApi="lollipop" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>