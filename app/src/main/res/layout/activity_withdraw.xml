<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.activity.WithdrawActivity"
    android:background="@color/fontColor"
    android:id="@+id/container">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1ECFF" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="-25dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/close"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="30dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/secondaryColor"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_round_close_24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    tools:targetApi="lollipop" />
            </androidx.cardview.widget.CardView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/dosis_bold"
                        android:text="Penarikan"
                        android:textColor="@color/fontColor"
                        android:textSize="36sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="30dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:layout_marginEnd="6dp"
                                android:layout_marginTop="20dp"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="12dp"
                                    android:background="@drawable/layouting">

                                    <EditText
                                        android:id="@+id/coin"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="#00000000"
                                        android:fontFamily="@font/dosis_regular"
                                        android:hint="999"
                                        android:imeOptions="actionDone"
                                        android:inputType="number"
                                        android:textSize="16sp" />

                                    <LinearLayout
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginHorizontal="10dp"
                                        android:layout_marginVertical="5dp"
                                        android:background="#CDCDCD" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/dosis_regular"
                                        android:text="Coin"
                                        android:textColor="@color/fontColor"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:background="@drawable/background_label"
                                    android:fontFamily="@font/dosis_semibold"
                                    android:text="Jumlah Coin"
                                    android:textColor="#1b1b1b"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="20dp"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="12dp"
                                    android:background="@drawable/layouting">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/dosis_regular"
                                        android:text="IDR"
                                        android:textColor="@color/fontColor"
                                        android:textSize="14sp" />
                                    <LinearLayout
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginHorizontal="10dp"
                                        android:layout_marginVertical="5dp"
                                        android:background="#CDCDCD" />
                                    <EditText
                                        android:id="@+id/idr"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="#00000000"
                                        android:fontFamily="@font/dosis_regular"
                                        android:hint="100000"
                                        android:imeOptions="actionDone"
                                        android:inputType="number"
                                        android:textSize="16sp" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:background="@drawable/background_label"
                                    android:fontFamily="@font/dosis_semibold"
                                    android:text="Nominal"
                                    android:textColor="#1b1b1b"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/error"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginTop="1dp"
                                android:src="@drawable/ic_round_error_24" />

                            <TextView
                                android:id="@+id/error_msg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_label"
                                android:fontFamily="@font/dosis_semibold"
                                android:text="Minimal penarikan adalah 600 Coin (IDR 30000)"
                                android:textColor="#ff0000"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginHorizontal="30dp">

                        <TextView
                            android:id="@+id/payment_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/layouting"
                            android:fontFamily="@font/dosis_regular"
                            android:gravity="center_vertical"
                            android:hint="Pilih Profil Pembayaran"
                            android:inputType="text"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:background="@drawable/background_label"
                            android:fontFamily="@font/dosis_semibold"
                            android:text="Profil Pembayaran"
                            android:textColor="#1b1b1b"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/profil_bank"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/layouting"
                            android:fontFamily="@font/dosis_regular"
                            android:gravity="center_vertical"
                            android:hint="Nama Bank"
                            android:inputType="text"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:background="@drawable/background_label"
                            android:fontFamily="@font/dosis_semibold"
                            android:text="Bank"
                            android:textColor="#1b1b1b"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/profil_bank_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/layouting"
                            android:fontFamily="@font/dosis_regular"
                            android:gravity="center_vertical"
                            android:hint="Nomor Rekening"
                            android:inputType="text"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:background="@drawable/background_label"
                            android:fontFamily="@font/dosis_semibold"
                            android:text="Nomor Rekening"
                            android:textColor="#1b1b1b"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/profil_bank_alias"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/layouting"
                            android:fontFamily="@font/dosis_regular"
                            android:gravity="center_vertical"
                            android:hint="Nama Pemilik Rekening"
                            android:inputType="text"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:background="@drawable/background_label"
                            android:fontFamily="@font/dosis_semibold"
                            android:text="Pemilik Rekening"
                            android:textColor="#1b1b1b"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </LinearLayout>
            </ScrollView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_action"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/mainColor"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/btn_loading"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="20dp"
                        android:layout_toStartOf="@+id/btn_label"
                        android:indeterminateDrawable="@drawable/progress"
                        android:indeterminateDuration="1000"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/btn_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/dosis_bold"
                        android:text="Minta Penarikan"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    tools:targetApi="lollipop" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>